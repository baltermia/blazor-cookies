{
  "compilerOptions": {
    "incremental": true,
    "lib": [ "ES2020", "DOM" ],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "wwwroot/js/",
    "removeComments": true,
    "rootDir": "Scripts",
    "strict": true,
    "target": "ES6"
  },
  "include": [ "**/*.ts" ],
  "compileOnSave": true
}
